<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a.health_assistant">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/run_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/run_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.MainActivity" />
        <activity
            android:name=".activitys.CourseInfoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name=".activitys.LoginActivity" />
        <activity android:name=".activitys.RegisterActivity" />
        <activity android:name=".activitys.MeActivity" />
        <activity android:name=".activitys.ListActivity" />
        <activity android:name=".activitys.BMICalculateActivity" />
        <activity android:name=".activitys.ModifyPasswordActivity" />

        <service
            android:name=".activitys.MyService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activitys.FoodActivity"/>
        <activity android:name=".activitys.tabXml"/>
    </application>

</manifest>